#!/usr/bin/env ruby

require_relative '../lib/dice'

system = BuildSystem.new("./recipes/suse-13.1-JeOS")
if system.is_locked?
   puts "System is locked, job running"
elsif !system.job_required?
   puts "System us up to date, no job required"
else
  system.up
  system.provision
  job = Job.new(system)
  job.build
  job.get_result
  system.writeDigest
  system.halt
end

begin
  Cli.run(ARGV)
end
